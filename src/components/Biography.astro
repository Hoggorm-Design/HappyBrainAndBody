---
import "../styles/global.css";
import { Image } from "astro:assets";

const {
    title,
    buttonText,
    buttonLink,
    imageSrc,
    imageAlt,
    name,
    degree,
    info,
} = Astro.props;
---

<div class="container">
    <h2>{title}</h2>
    <div class="gray-background-container">
        <div class="image-text-container">
            <div class="image-container">
                <Image src={imageSrc} alt={imageAlt} />
            </div>
            <div class="text-container">
                <h3>{name}</h3>
                <p style="margin-top:-20px;">{degree}</p>
                <p>{info}</p>
            </div>
        </div>
        <a href={buttonLink} target="_blank">
            <button>{buttonText}</button>
        </a>
    </div>
</div>

<style>
    .container {
        margin-top: 100px;
    }

    .image-text-container {
        display: flex;
        gap: 30px;
    }

    .gray-background-container {
        background-color: #e8e8e8;
        display: flex;
        align-items: center;
        padding: 30px;
        gap: 50px;
        margin-top: 50px;
        max-width: 100%;
        border-radius: 5px;
    }

    button {
        background-color: #5daad7;
        border: #5daad7;
        color: white;
        padding: 20px 20px;
        width: 300px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        border-radius: 5px;
    }

    button:hover {
        cursor: pointer;
        background-color: #5daad7b7;
    }

    @media (max-width: 768px) {
        .gray-background-container {
            background-color: #ffffff;
            flex-direction: column;
            align-items: baseline;
            gap: 0;
            padding: 0;
        }

        .image-text-container {
            flex-direction: column;
        }

        button {
            padding: 10px 25px;
            font-size: 14px;
        }
    }
</style>
