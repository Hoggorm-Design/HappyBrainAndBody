---
import "../styles/global.css";
import { Image } from "astro:assets";
const { title, buttonText, buttonLink, imageSrc, imageAlt, info } = Astro.props;
---

<div class="container">
    <div class="img-container">
        <Image class="image" src={imageSrc} alt={imageAlt} />
    </div>
    <div class="text-container">
        <h3>{title}</h3>
        <p>{info}</p>
        <a href={buttonLink} class="button">
            {buttonText} &rsaquo;
        </a>
    </div>
</div>

<style>
    .button {
        margin-top: 20px;
        background-color: none;
        color: black;
        text-decoration: none;
    }

    .button:hover {
        cursor: pointer;
        text-decoration: underline;
    }

    .img-container {
        overflow: hidden;
    }

    .image {
        width: 100%;
        height: 350px;
        object-fit: cover;
    }

    @media (max-width: 650px) {
        .image {
            height: 250px;
        }
    }
</style>
