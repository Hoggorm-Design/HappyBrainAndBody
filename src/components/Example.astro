---
import "../styles/global.css";
const { title, buttonText, buttonLink, imageSrc, imageAlt, info } = Astro.props;
---

<div class="container">
    <div class="img-container">
        <img src={imageSrc} alt={imageAlt} loading="lazy" />
    </div>
    <div class="text-container">
        <h3>{title}</h3>
        <p>{info}</p>
        <a href={buttonLink} class="button">
            {buttonText} &rsaquo;
        </a>
    </div>
</div>

<style>
    .button {
        margin-top: 20px;
        background-color: none;
        color: black;
        text-decoration: none;
    }

    .button:hover {
        cursor: pointer;
        text-decoration: underline;
    }

    .img-container {
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        height: 350px;
    }
    .img-container img {
        flex-shrink: 0;
        min-width: 100%;
        min-height: 100%;
    }

    .container {
        flex: 1;
    }
</style>
