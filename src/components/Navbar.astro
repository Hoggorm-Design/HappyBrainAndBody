---
import { Icon } from "astro-icon/components"

const props = Astro.props
---


<header class="header">

<nav class="navbar-container">
    <h2 class="title">happybrainandbody.com</h2>
        <div class="navbar-items">
            <ul class="navbar-links">
                <li><button class="button-no-style-nav">Kontakt</button></li>
                <li><button class="button-no-style-nav">Hva er EQ?</button></li>
                <li><a href="https://www.ous-research.no/home/rgda/Group+members/20105" target="_blank" >Publikasjonsliste</a></li>
                <li><button class="button-no-style-nav">Bok</button></li>
            </ul>
            <button class="foredrag navbar-button">
                Foredrag
            </button>
            <button class="eq-terapi navbar-button">
                EQ-terapi
            </button>
            <Icon name="hamburger" color="#fff" size={45} />
        </div>

</nav>

</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const hamburger = document.querySelector('.hamburger');
        const dropdownMenu = document.querySelector('.dropdown-menu');

        // Check if both elements are found
        if (hamburger && dropdownMenu) {
            hamburger.addEventListener('click', () => {
                dropdownMenu.classList.toggle('show');
            });
        }
    });
</script>

<style>

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1.3rem 10%;
        background-color: var(--primary-accent);
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;

    }
    .navbar-container {
        display: flex;
        justify-content: space-between;
        gap: 4rem;
    }
    .navbar-items {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;


    }
    .mobile-header {
        position: relative;
        display: flex;
        gap: 0;
    }

    .title {
        color: var(--secondary-accent);
        position: relative;
        margin: 0;
    }
    li {
        list-style-type: none;
        width: min-content;
        white-space: nowrap;
    }
    li a {
        color: var(--secondary-accent);
        text-decoration: none;
    }

    li a:hover {
        color: var(--third-accent);
        text-decoration: underline;
    }

    .navbar-links {
        display: flex;
        font-weight: 500;
        gap: 4rem;
    }

    .button-no-style-nav {
        background: none;
        color: var(--secondary-accent);
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
    }
    .button-no-style-nav:hover {
        color: var(--third-accent);
    }
    .button-nav {
        display: flex;
        gap: 1rem;
    }
    .navbar-button {
        border: var(--secondary-accent) solid 1px;
        background-color: var(--primary-accent);
        padding: 1rem;
        color: var(--secondary-accent);
        transition: transform 0.1s ease, box-shadow 0.1s ease;
    }
    .navbar-button:hover {
        background-color: var(--primary-accent);
        filter: brightness(80%);
        cursor: pointer;

    }
    .navbar-button:active {
        filter: brightness(70%);
        transform: translateY(2px);
        box-shadow: 0 0 1px var(--secondary-accent);

    }

    .hamburger {
        display: none;
    }

    @media screen and (max-width: 1300px) {
        .navbar-links {
            gap: 1rem;
        }
        .title {
            font-size: medium;
        }
    }

    @media screen and (max-width: 800px) {


    }


</style>