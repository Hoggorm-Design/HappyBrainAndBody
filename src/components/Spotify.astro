---
const { title, buttonText, buttonLink, info } = Astro.props;
---

<div class="container">
    <div class="spotify-container">
        <iframe
            src="https://open.spotify.com/embed/episode/0Jis0INFCA33ffLmTxBwm8?utm_source=generator"
            title="Raushetspodden"
            width="100%"
            height="352"
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"></iframe>
    </div>
    <div class="text-container">
        <h3>{title}</h3>
        <p>{info}</p>
        <a href={buttonLink} class="button" target="_blank">
            {buttonText} &rsaquo;
        </a>
    </div>
</div>

<style>
    .button {
        margin-top: 20px;
        background-color: none;
        color: black;
        text-decoration: none;
    }

    .button:hover {
        cursor: pointer;
        text-decoration: underline;
    }

    .spotify-container {
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        height: 350px;
        
    }

    .spotify-container iframe {
        border: none;
        border-radius: 0%;
        min-width: 50%;
        min-height: 50%;

    }

    .container {
        flex: 1;
    }

    @media (max-width: 650px) {
        .spotify-container iframe {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .spotify-container {
            height: 250px;
        }
    }
</style>
